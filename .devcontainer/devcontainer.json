{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {}

  "dockerFile": "Dockerfile",
  "context": "..",
  "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "cmake . && make",
  "remoteUser": "vscode"
}
